<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--This is the list view for the employees--> 
		<record model="ir.ui.view" id="custom_hr_fields_tree">
			<field name="model">hr.employee</field>
        	<field name="inherit_id" ref="hr.view_employee_tree"/>
        	<field name="arch" type="xml">
            		<xpath expr="/tree/field[@name='name']" position="after">
						<field name="gender"/>
						<field name="fileno" string="Personal File No."/>
					</xpath>
					<xpath expr="/tree/field[@name='job_id']" position="after">
                        <field name="birthday"/>
                        <field name="date_first_appointment"/>
                        <field name="date_retirement"/>						
					</xpath>
                    <field name='department_id' position='attributes'>
                        <attribute name="invisible">1</attribute>
                    </field>
        	</field>
        </record>

		<!-- Inherit Form View to Modify it -->
		<record id="custom_hr_fields_form" model="ir.ui.view">
        	<field name="name">custom.hr.fields.form</field>
           	<field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
		    <field name="arch" type="xml">

		        <xpath expr="//div[2]/div/div" position="before">
                        <div class="employee_title" style="padding-left:5px;margin-left:10px;w">
                            <label for="employee_title"/>
                            <field name="employee_title"/>
                        </div>
				</xpath>

				<xpath expr="//div[@class='employee_title']" position="after">
					<div class="emp_names">
						<div>
							<label for="firstname"/>
							<field name="firstname"/>
						</div>
						<div>
							<label for="othername"/>
							<field name="othername"/>
						</div>
						<div>
							<label for="surname"/>
							<field name="surname"/>
						</div>
					</div>
				</xpath>

				<xpath expr="//notebook" position="inside">
					<page string="Education">
						<field name="education_ids" context="{'default_employee_id': active_id}"/>
					</page>
				</xpath>
				<xpath expr="//field[@name='country_id']" position="after">
					<field name="stateoforigin" context="{'default_country_id': country_id}"/>
					<field name="lga_id" context="{'default_state_id': stateoforigin}" />
				</xpath>

				<xpath expr="//field[@name='parent_id']" position="attributes">
					<attribute name="string">Supervisor name</attribute>
				</xpath>

				<xpath expr="//page[@name='personal_information']/group" position="inside">
					<group name="pension_info" string="Pension Information">
						<field name="pension_id"/>
					</group>
				</xpath>

				<xpath expr="//page[@name='public']/group" position="inside">
					<group name="appointments" string="Appointments">
						<field name="date_first_appointment" string="Date of First Appointment" />
						<field name="date_confirm_appointment" string="Confirmation Date" />
						<field name="date_present_appointment" string="Present Appointment Date" />
						<field name="date_retirement" />
					</group>
					<group name="posting" string="Posting">
						<field name="date_posted" string="Date posted ..." placeholder="Date posted to Min. of Env."/>
					</group>
				</xpath>

				<xpath expr="//field[@name='coach_id']" position="after">
					<field name="grade_id"/>
					<field name="step_id"/>
				</xpath>

		    </field>
		</record>

        <!-- Educational Qualifications List View -->
        <record id="educational_history_tree_view" model='ir.ui.view'>
            <field name='name'>educational.history.tree.view</field>
            <field name='model'>educational.history</field>
            <field name='view_type'>tree</field>
            <field name='view_mode'>form,tree</field>
                <field name='arch' type='xml'>
                    <tree>
                        <field name='school_name'/>
                        <field name='date_from'/>
                        <field name='date_to'/>
                        <field name='course_studied'/>
                        <field name='quali'/>
                        <field name='cert_date'/>
                    </tree>
                </field>
        </record>

        <!-- Educational Qualifications Form View -->
        <record id="educational_history_form_view" model='ir.ui.view'>
            <field name='name'>educational.history.form.view</field>
            <field name='model'>educational.history</field>
            <field name='view_type'>form</field>
                <field name='arch' type='xml'>
                    <form string="Employee's Educational History">
                        <sheet>
                            <group>
								<group>
									<field name='school_name'/>
									<field name='course_studied'/>
								</group>
								<group>
									<field name='quali'/>
                                	<field name='cert_date'/>
								</group>
								<div colspan="1">
									<div colspan="1">
										<label for="date_from"/>
										<field name='date_from'/>
									</div>
									<div colspan="1">
										<label for="date_to"/>
										<field name='date_to'/>
									</div>
								</div>
                            </group>
                        </sheet>
                    </form>
                </field>
        </record>

